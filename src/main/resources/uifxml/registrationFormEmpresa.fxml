<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="formContainer" alignment="TOP_CENTER" spacing="10" stylesheets="@../styling/paleta2.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ControllerEmpresa">
    <children>
      <VBox alignment="CENTER" prefHeight="32.0" prefWidth="330.0">
         <children>
              <Label alignment="BOTTOM_LEFT" style="-fx-font-size: 36px;" stylesheets="@../styling/paleta2.css" text="Registro de Empresa">
               <font>
                  <Font size="48.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="330.0">
         <children>
            <Label stylesheets="@../styling/paleta2.css" text="Nombre de la empresa:" />
              <TextField fx:id="txtNombre" prefHeight="26.0" prefWidth="330.0" promptText="Ingrese nombre de empresa" stylesheets="@../styling/paleta2.css" />
         </children>
      </VBox>
      <VBox prefHeight="12.0" prefWidth="330.0">
         <children>
      
              <Label stylesheets="@../styling/paleta2.css" text="Dirección:" />
              <TextArea fx:id="txtDireccion" prefHeight="15.0" prefWidth="330.0" promptText="Ingrese dirección" stylesheets="@../styling/paleta2.css" />
         </children>
      </VBox>
      <VBox prefHeight="0.0" prefWidth="330.0">
         <children>
      
              <Label stylesheets="@../styling/paleta2.css" text="Teléfono:" />
              <TextField fx:id="txtTelefono" prefHeight="26.0" prefWidth="195.0" promptText="Ingrese teléfono" stylesheets="@../styling/paleta2.css" />
         </children>
      </VBox>
      <VBox prefHeight="0.0" prefWidth="330.0">
         <children>
      
              <Label stylesheets="@../styling/paleta2.css" text="Email:" />
              <TextField fx:id="txtEmail" prefHeight="52.0" prefWidth="330.0" promptText="Ingrese email" stylesheets="@../styling/paleta2.css" />
         </children>
      </VBox>

        <Button fx:id="handleSiguienteForm" onAction="#handleSiguienteForm" text="Siguiente" />
        <Label fx:id="lblStatus" textFill="red" />
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
